@model Kanban.ViewModels.ListarUsuariosViewModel

@{
    ViewData["Title"] = "Listar Usuarios";
}

<div class="text-center">
    <h2>Usuarios</h2>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.NombreUsuario</td>
                <td>@usuario.Rol</td>
                <td>
                    <a class="btn btn-primary" asp-action="IrAModificarUsuario" asp-route-id="@usuario.Id">Editar</a>
                    <form asp-controller="Usuario" asp-action="eliminarUsuario" asp-route-id="@usuario.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este usuario?')">Eliminar</button>
                    </form>
                </td>
            </tr>            
        }
    </tbody>
</table>